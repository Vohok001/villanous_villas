 <div class="form-login p-4">
  <h2 class="pb-4">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean, wrapper_html: { class: 'custom-remember-me' } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:"form-btn" %>
      </div>
    <% end %>

</div>


<div class="row g-2 mt-5" class="devise-alert-container">
  <%= render "devise/shared/links" %>
</div>
