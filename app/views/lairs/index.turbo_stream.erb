<%= turbo_stream.replace "lair-results" do %>
  <div id="lair-results" class="lairs-container">
    <% @lairs.each do |lair| %>
      <%= link_to lair_path(lair, check_in: params[:check_in], check_out: params[:check_out]) do %>
        <div class="lair-card">
          <div class="image-container">
     <%if lair.images.exists?  %>
              <%= cl_image_tag lair.images.first.key, class: "lair-image" %>
            <%else %>
              <%= image_tag "#{default_lair_image(lair.name)}", class: "lair-image" %>
            <%end%>
          </div>
            <h2><%= lair.name %></h2>
          <p><%= lair.tagline %></p>
          <div class="more-info">
            <p><i class="fa-solid fa-users-line"></i> <%= lair.max_guests %></p>
            <p>Â£<%= lair.price_per_night %>0</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
