
<%= simple_form_for(@lair) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :max_guests %>
  <%= f.text_field :max_guests %>
  <%= f.label :price_per_night %>
  <%= f.number_field :price_per_night %>
  <%= f.submit %>
<% end %>
